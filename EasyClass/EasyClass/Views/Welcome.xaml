<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyClass.Views.Welcome"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Image Source="blackboard.png" Aspect="AspectFill" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="EASYClass4.png" WidthRequest="200" HeightRequest="200" Margin="0,50,0,30" />
                    <StackLayout Grid.Row="1" Padding="30,20">
                        <Label HorizontalTextAlignment="Center" Text="BIENVENIDO ALUMNO" TextColor="White" Font="20"/>
                        <Button x:Name="btnComenzar" Text="Comenzar" BackgroundColor="White" BorderRadius="20" TextColor="Black" Clicked="btnComenzar_Clicked"  />
                    </StackLayout>
                </Grid>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>